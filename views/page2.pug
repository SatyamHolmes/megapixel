html
    head
        title Megapixel
        link(href="/files/page.css" rel="stylesheet" type="text/css")
    body
        -var str="";
        -add.forEach((val,num)=>{
            -if(num==0)
                -str+="add="+val;
            -else
                -str+="&add="+val;
        -})
        -files.forEach((val,num)=>{
            -if(val.type=="folder")
                a(href="/megapixel/?"+str+"&add="+val.name) 
                    div(style="display: inline-block; width:200 px; font-size:80%; text-align: center; padding-left: 1em" )
                        img(src="/thumb/?"+str+"&add="+val.name width="180px" height="120px" style="padding-bottom:0.5em;") 
                        p #{val.name}
            -else if(val.type=="image")
                img(src="/download/?"+str height="50%" width="40%")
            -else
                video(height="50%" width="40%" controls)
                    source(src="/download/?"+str)
        -})
